<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp page</h1>
    <div class="col-6 offset-3" >
        <form action="/signup" method="post" novalidate class="needs-validation">
            <div>
                <label for="username" class="form-label" >Username</label>
                 <input name="username" id="username" type="text" placeholder="username" class="form-control" required>
                 <div class="valid-feedback"> looks good!</div>
                 <div class="invalid-feedback">Please Enter a Title</div><br>
            </div>
            <div>
                <label for="email" class="form-label" >E-mail</label>
                 <input name="email" id="email" type="email" placeholder="username" class="form-control" required>
                 <div class="valid-feedback"> looks good!</div>
                 <div class="invalid-feedback">Please Enter a E-mail</div><br>
            </div> 
            <div>
                <label for="password" class="form-label" >Password</label>
                 <input name="password" id="password" type="password" placeholder="username" class="form-control" required>
                 <div class="valid-feedback"> looks good!</div>
                 <div class="invalid-feedback">Please Enter a Password</div><br>
            </div> 
            <button class="btn btn-outline-success">SignUp</button>
        </form>
    </div>
</div>